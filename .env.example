# Backend Environment Variables
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database - MySQL (SaveInCloud)
# Para desenvolvimento local, use: localhost
# Para produção, use: bolaovip-cs-backend.sp1.br.saveincloud.net.br
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=douttoroculos
DB_POOL_MIN=5
DB_POOL_MAX=20

# Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_chars
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Admin Seed (primeiro usuário criado automaticamente)
ADMIN_PORTAL=default
ADMIN_USERNAME=admin
ADMIN_PASSWORD=123456
ADMIN_NAME=Administrador
ADMIN_EMAIL=admin@douttoroculos.com

# Redis Cache (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS - Adicione suas URLs permitidas separadas por vírgula
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173,http://192.168.56.127:5173

# Logging (opcional)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AWS S3 (Optional for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=douttoroculos-media

# Email (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# WhatsApp (Optional)
WHATSAPP_API_TOKEN=your_token_here

# Payment Gateway (Optional)
PAYMENT_API_KEY=your_key_here

# SSH Database Access (SaveInCloud - Production only)
SSH_HOST=gate.paas.saveincloud.net.br
SSH_PORT=3022
SSH_USER=8187
SSH_KEY_PATH=~/.ssh/id_rsa_douttoroculos
